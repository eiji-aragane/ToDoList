{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++14",
                "-I./header",
                "source/main.cpp",
                "source/task.cpp",
                "source/taskManager.cpp",
                "-o",
                "main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "run",
            "type": "shell",
            "command": ".\\main.exe",
            "dependsOn": ["build"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}